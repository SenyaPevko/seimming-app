<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        xmlns:models="clr-namespace:WpfApp1.Models"
        Title="Проверка звания" Height="450" Width="350"
        Background="#C5D9FE" WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>

	<Window.Resources>
		<models:TimeSpanConverter x:Key="TimeSpanConverter" />

		<!-- Стиль для TextBox -->
		<Style TargetType="TextBox">
			<Setter Property="Margin" Value="5" />
			<Setter Property="Padding" Value="10,5" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Background" Value="White" />
			<Setter Property="BorderBrush" Value="#00B0E0" />
			<Setter Property="BorderThickness" Value="3" />
			<Setter Property="VerticalAlignment" Value="Center" />
		</Style>

		<!-- Стиль для Button -->
		<Style TargetType="Button">
			<Setter Property="Margin" Value="10" />
			<Setter Property="Padding" Value="10,5" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Background" Value="#014AC2" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Стиль для ComboBox -->
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="5" />
			<Setter Property="Padding" Value="10,5" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Background" Value="White" />
			<Setter Property="BorderBrush" Value="#00B0E0" />
			<Setter Property="BorderThickness" Value="3" />
		</Style>

		<!-- Стиль для TextBlock -->
		<Style TargetType="TextBlock">
			<Setter Property="Margin" Value="5" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="FontWeight" Value="600" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Foreground" Value="#00B0E0" />
		</Style>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Поле выбора Соревнования -->
		<TextBlock Text="Соревнование" Grid.Row="0" Grid.Column="0" />
		<ComboBox ItemsSource="{Binding Competitions}" SelectedItem="{Binding Athlete.Competition}" Grid.Row="0" Grid.Column="1" />

		<!-- Поле выбора Пола -->
		<TextBlock Text="Пол" Grid.Row="1" Grid.Column="0" />
		<ComboBox ItemsSource="{Binding Genders}" SelectedItem="{Binding Athlete.Gender}" Grid.Row="1" Grid.Column="1" />

		<!-- Поле выбора Дисциплины -->
		<TextBlock Text="Дисциплина" Grid.Row="2" Grid.Column="0" />
		<ComboBox ItemsSource="{Binding Disciplines}" SelectedItem="{Binding Athlete.Discipline}" Grid.Row="2" Grid.Column="1" />

		<!-- Поле ввода Возраста -->
		<TextBlock Text="Возраст" Grid.Row="3" Grid.Column="0" />
		<TextBox Text="{Binding Athlete.Age, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" />

		<!-- Поле ввода Занятого места -->
		<TextBlock Text="Занятое место" Grid.Row="4" Grid.Column="0" />
		<TextBox Text="{Binding Athlete.Place, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" />

		<!-- Поле ввода Времени на дистанции -->
		<TextBlock Text="Время на дистанции" Grid.Row="5" Grid.Column="0" />
		<TextBox Text="{Binding Athlete.Time, Converter={StaticResource TimeSpanConverter}, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" />

		<!-- Поле ввода Времени отставания -->
		<TextBlock Text="Время отставания" Grid.Row="6" Grid.Column="0" />
		<TextBox Text="{Binding Athlete.TimeDifference, Converter={StaticResource TimeSpanConverter}, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="1" />

		<!-- Кнопка Проверить звание -->
		<Button Content="Проверить звание" Command="{Binding CheckRankCommand}" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" />

		<!-- Результат -->
		<TextBlock Text="{Binding Result}" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" TextAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="#3B82F6" />
	</Grid>
</Window>
